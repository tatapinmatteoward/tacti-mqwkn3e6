---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Matches - Tactical Tachyon";
const pageDescription = "Dive into the heart of football action with Tactical Tachyon's matches page. Explore upcoming fixtures, live updates, and in-depth tactical analyses enhanced by our sci-fi inspired insights for the ultimate fan experience.";

const upcomingFixtures = [
  {
    id: 1,
    league: "Premier League",
    homeTeam: "Manchester United",
    awayTeam: "Arsenal",
    date: "October 15, 2023",
    time: "20:00 UTC",
    tacticalEdge: "United's high-pressing formation clashes with Arsenal's fluid counter-attacks. Expect neon-lit midfield duels.",
    keyPlayer: "Bruno Fernandes vs. Aaron Ramsdale"
  },
  {
    id: 2,
    league: "La Liga",
    homeTeam: "Barcelona",
    awayTeam: "Real Madrid",
    date: "October 16, 2023",
    time: "19:00 UTC",
    tacticalEdge: "Barcelona's tiki-taka vs Madrid's high-intensity pressing. A battle of philosophies.",
    keyPlayer: "Pedri vs. Casemiro"
  },
  {
    id: 3,
    league: "Bundesliga",
    homeTeam: "Bayern Munich",
    awayTeam: "Borussia Dortmund",
    date: "October 17, 2023",
    time: "20:30 UTC",
    tacticalEdge: "Defensive solidity vs. attacking flair. Dortmund's width vs Bayern's central dominance.",
    keyPlayer: "Gnabry vs. Mats Hummels"
  }
];

const liveMatches = [
  {
    id: 1,
    homeTeam: "Liverpool",
    awayTeam: "Chelsea",
    score: "2-1",
    status: "Live",
    minute: "78'",
    league: "Premier League"
  },
  {
    id: 2,
    homeTeam: "PSG",
    awayTeam: "Marseille",
    score: "1-0",
    status: "Halftime",
    minute: "45'",
    league: "Ligue 1"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section with Grid Background -->
  <div class="relative bg-gradient-to-br from-gray-900 to-black overflow-hidden">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCI+CiAgPHBhdGggZD0iTTAgMGg2MHY2MEgweiIgZmlsbD0ibm9uZSIvPgogIDxwYXRoIGQ9Ik0zMyAzM2gtN3Y3aDd6IiBzdHJva2U9IiMzOUZGMTE0IiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS13aWR0aD0iMC41Ii8+Cjwvc3ZnPg==')] opacity-20"></div>
    <div class="container mx-auto px-4 py-20 relative z-10">
      <div class="flex flex-col items-center text-center">
        <div class="inline-block bg-gray-800 px-4 py-1 rounded-full mb-6 border border-emerald-500/30">
          <span class="text-emerald-400 font-mono text-sm">TACTICAL TACHYON</span>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          Matches
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl">
          Dive into the heart of football action with Tactical Tachyon's matches page. Explore upcoming fixtures, live updates, and in-depth tactical analyses enhanced by our sci-fi inspired insights for the ultimate fan experience.
        </p>
      </div>
    </div>
  </div>

  <!-- Upcoming Fixtures Section -->
  <section class="py-16 bg-gradient-to-b from-gray-900 to-black">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl font-bold text-white flex items-center">
          <i class="fas fa-calendar-alt mr-3 text-emerald-400"></i>
          Upcoming Fixtures
        </h2>
        <div class="h-0.5 bg-gradient-to-r from-transparent via-emerald-500 to-transparent flex-grow mx-4"></div>
        <span class="text-emerald-400 font-mono text-sm">TACHYON PROBES</span>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {upcomingFixtures.map((fixture) => (
          <div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-xl overflow-hidden hover:border-emerald-500/50 transition-all duration-300 hover:shadow-lg hover:shadow-emerald-500/10 group">
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <div class="bg-emerald-900/30 px-3 py-1 rounded-full text-emerald-300 text-sm font-mono">
                  {fixture.league}
                </div>
                <div class="text-gray-400 text-sm">
                  <i class="fas fa-clock mr-1"></i> {fixture.date}
                </div>
              </div>
              
              <div class="flex justify-between items-center mb-6">
                <div class="text-center">
                  <div class="text-white font-semibold text-lg">{fixture.homeTeam}</div>
                </div>
                <div class="text-gray-400 text-xl font-bold">VS</div>
                <div class="text-center">
                  <div class="text-white font-semibold text-lg">{fixture.awayTeam}</div>
                </div>
              </div>
              
              <div class="mb-6">
                <div class="text-gray-300 text-sm mb-2">Tactical Edge:</div>
                <div class="text-gray-200 text-sm italic">{fixture.tacticalEdge}</div>
              </div>
              
              <div class="text-emerald-400 text-sm font-mono flex items-center justify-between">
                <span><i class="fas fa-user mr-1"></i> {fixture.keyPlayer}</span>
                <span>{fixture.time}</span>
              </div>
            </div>
            
            <div class="px-6 py-3 bg-gray-900/50 border-t border-gray-700 flex justify-between items-center">
              <span class="text-gray-400 text-sm">Tachyon Prediction</span>
              <div class="flex space-x-2">
                <div class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></div>
                <div class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse" style="animation-delay: 0.2s"></div>
                <div class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse" style="animation-delay: 0.4s"></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Live Matches Section -->
  <section class="py-16 bg-gradient-to-b from-black to-gray-900">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl font-bold text-white flex items-center">
          <i class="fas fa-bolt mr-3 text-red-400"></i>
          Live Matchups
        </h2>
        <div class="h-0.5 bg-gradient-to-r from-transparent via-red-500 to-transparent flex-grow mx-4"></div>
        <span class="text-red-400 font-mono text-sm">REAL-TIME SCAN</span>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {liveMatches.map((match) => (
          <div class="bg-gradient-to-r from-gray-800/30 to-gray-900/30 backdrop-blur-sm border border-gray-700 rounded-xl overflow-hidden hover:border-red-500/50 transition-all duration-300 group">
            <div class="p-6">
              <div class="flex justify-between items-center mb-6">
                <span class="bg-red-900/50 text-red-400 px-3 py-1 rounded-full text-sm font-mono">
                  {match.status}
                </span>
                <span class="text-gray-400 text-sm">{match.minute} â€¢ {match.league}</span>
              </div>
              
              <div class="flex justify-between items-center mb-8">
                <div class="text-center">
                  <div class="text-white font-semibold text-xl">{match.homeTeam}</div>
                  <div class="text-3xl font-bold text-emerald-400 mt-2">{match.score.split('-')[0]}</div>
                </div>
                
                <div class="text-gray-500 text-xl font-bold">-</div>
                
                <div class="text-center">
                  <div class="text-white font-semibold text-xl">{match.awayTeam}</div>
                  <div class="text-3xl font-bold text-emerald-400 mt-2">{match.score.split('-')[1]}</div>
                </div>
              </div>
              
              <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-red-500/10 to-transparent"></div>
                <div class="relative flex justify-center">
                  <div class="flex items-center space-x-4">
                    <div class="w-3 h-3 rounded-full bg-red-500 animate-pulse"></div>
                    <span class="text-red-400 font-mono text-sm">LIVE UPDATES</span>
                    <div class="w-3 h-3 rounded-full bg-red-500 animate-pulse" style="animation-delay: 0.5s"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Tactical Insights Section -->
  <section class="py-16 bg-gradient-to-b from-gray-900 to-black">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl font-bold text-white flex items-center">
          <i class="fas fa-brain mr-3 text-purple-400"></i>
          Tactical Insights
        </h2>
        <div class="h-0.5 bg-gradient-to-r from-transparent via-purple-500 to-transparent flex-grow mx-4"></div>
        <span class="text-purple-400 font-mono text-sm">HYPERSPACE ANALYSIS</span>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700 rounded-xl p-8">
          <h3 class="text-xl font-bold text-white mb-4">Where Strategy Meets the Pitch</h3>
          <p class="text-gray-300 mb-6 leading-relaxed">
            In this minimalist dark sci-fi realm, neon grids illuminate the tactical battles unfolding on the field. 
            Track live games, preview upcoming clashes, and dissect post-match breakdowns with precision scans 
            that reveal hidden patterns and strategies.
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
            <div class="flex flex-col items-center text-center p-4 bg-gray-900/50 rounded-lg border border-gray-700">
              <div class="w-12 h-12 rounded-full bg-emerald-900/30 flex items-center justify-center mb-3">
                <i class="fas fa-binoculars text-emerald-400 text-xl"></i>
              </div>
              <h4 class="text-white font-semibold mb-2">Data Analysis</h4>
              <p class="text-gray-400 text-sm">Advanced metrics and pattern recognition</p>
            </div>
            
            <div class="flex flex-col items-center text-center p-4 bg-gray-900/50 rounded-lg border border-gray-700">
              <div class="w-12 h-12 rounded-full bg-purple-900/30 flex items-center justify-center mb-3">
                <i class="fas fa-chart-line text-purple-400 text-xl"></i>
              </div>
              <h4 class="text-white font-semibold mb-2">Predictive Models</h4>
              <p class="text-gray-400 text-sm">Machine learning powered forecasts</p>
            </div>
            
            <div class="flex flex-col items-center text-center p-4 bg-gray-900/50 rounded-lg border border-gray-700">
              <div class="w-12 h-12 rounded-full bg-red-900/30 flex items-center justify-center mb-3">
                <i class="fas fa-shield-alt text-red-400 text-xl"></i>
              </div>
              <h4 class="text-white font-semibold mb-2">Tactical Breakdowns</h4>
              <p class="text-gray-400 text-sm">In-depth strategic insights</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes grid-pulse {
    0% { opacity: 0.1; }
    50% { opacity: 0.2; }
    100% { opacity: 0.1; }
  }

  .pulse-border {
    animation: pulse-border 2s infinite;
  }

  @keyframes pulse-border {
    0% { box-shadow: 0 0 0 0 rgba(57, 255, 20, 0.4); }
    70% { box-shadow: 0 0 0 8px rgba(57, 255, 20, 0); }
    100% { box-shadow: 0 0 0 0 rgba(57, 255, 20, 0); }
  }
</style>