---
import Layout from '../layouts/Layout.astro';

const pageTitle = "News - Tactical Tachyon";
const pageDescription = "Stay ahead of the game with the latest tactical insights, match analyses, and football innovations from Tactical Tachyon. Dive into our sci-fi inspired breakdowns of strategies that redefine the pitch.";

const newsItems = [
  {
    id: 1,
    title: "AI-Powered Formations Revolutionize Premier League Tactics",
    date: "October 15, 2023",
    excerpt: "Manchester City's latest 4-3-3 variant incorporates tachyon-inspired predictive algorithms to anticipate opponent movements.",
    content: "In a groundbreaking development, Manchester City's latest 4-3-3 variant incorporates tachyon-inspired predictive algorithms to anticipate opponent movements. Our experts break down how this neural grid setup neutralized Arsenal's high press, leading to a 2-0 victory. Key takeaways: Dynamic Shifting - Midfielders adapt in real-time, echoing quantum flux. Defensive Overlaps - Full-backs exploit 'neon zones' for attacking width.",
    category: "Technology",
    readTime: "5 min read"
  },
  {
    id: 2,
    title: "Quantum Ball Movement Transforms Defensive Structures",
    date: "October 10, 2023",
    excerpt: "New analysis reveals how teams are using quantum principles to disrupt traditional defensive formations.",
    content: "Our research team has uncovered how modern teams are applying quantum ball movement principles to disrupt defensive structures. By analyzing data from the Champions League, we demonstrate how teams like Liverpool utilize quantum-like positioning to create unpredictable attacking patterns that break down even the most organized defenses.",
    category: "Analysis",
    readTime: "7 min read"
  },
  {
    id: 3,
    title: "Neural Grid Training Revolutionizes Player Development",
    date: "October 5, 2023",
    excerpt: "Cutting-edge neural training programs are transforming how young players develop tactical awareness.",
    content: "The adoption of neural grid training systems is revolutionizing youth development programs. By simulating real-time tactical scenarios in virtual environments, players develop an intuitive understanding of spatial awareness that translates directly to match performance. This approach is already showing 40% improvement in decision-making speed among participating academies.",
    category: "Innovation",
    readTime: "6 min read"
  }
];

const featuredNews = newsItems[0];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section with Tactical Grid Background -->
  <div class="relative overflow-hidden bg-gradient-to-br from-gray-900 to-black py-24">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#39FF14_1px,transparent_1px),linear-gradient(to_bottom,#39FF14_1px,transparent_1px)] bg-[size:40px_40px]"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#39FF14] to-[#4B0082]">Tactical Tachyon</span> News Hub
        </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Stay ahead of the game with the latest tactical insights, match analyses, and football innovations from Tactical Tachyon. Dive into our sci-fi inspired breakdowns of strategies that redefine the pitch.
        </p>
        <div class="flex justify-center space-x-4">
          <div class="px-4 py-2 bg-[#39FF14] text-black font-bold rounded-lg animate-pulse">
            LATEST
          </div>
          <div class="px-4 py-2 border border-[#39FF14] text-[#39FF14] rounded-lg">
            SCIENCE
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Article -->
  <section class="py-16 bg-gradient-to-b from-black to-gray-900">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="bg-gradient-to-r from-gray-800 to-gray-900 rounded-2xl overflow-hidden border border-[#4B0082] shadow-2xl">
          <div class="p-1 bg-gradient-to-r from-[#39FF14] via-[#4B0082] to-[#39FF14]">
            <div class="bg-black p-6 md:p-8">
              <div class="flex flex-wrap items-center justify-between mb-4">
                <span class="px-3 py-1 bg-[#4B0082] text-[#39FF14] text-sm font-bold rounded-full">
                  {featuredNews.category}
                </span>
                <span class="text-gray-400 text-sm">{featuredNews.readTime}</span>
              </div>
              <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                {featuredNews.title}
              </h2>
              <p class="text-gray-300 text-lg mb-6">
                {featuredNews.excerpt}
              </p>
              <div class="text-gray-500 text-sm mb-6">
                <i class="fas fa-calendar"></i> {featuredNews.date}
              </div>
              <p class="text-gray-300 mb-8">
                {featuredNews.content}
              </p>
              <button class="px-6 py-3 bg-[#39FF14] text-black font-bold rounded-lg hover:bg-[#2aa80e] transition-all duration-300 transform hover:scale-105">
                Read Full Analysis
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest News Grid -->
  <section class="py-16 bg-black">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl font-bold text-white">
          Latest Tactical Insights
        </h2>
        <div class="h-0.5 flex-1 ml-6 bg-gradient-to-r from-transparent via-[#39FF14] to-transparent"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {newsItems.slice(1).map((item) => (
          <div 
            key={item.id} 
            class="bg-gradient-to-b from-gray-900 to-gray-800 rounded-xl overflow-hidden border border-gray-700 hover:border-[#39FF14] transition-all duration-300 hover:-translate-y-2 group"
          >
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <span class="px-3 py-1 bg-[#4B0082] text-[#39FF14] text-xs font-bold rounded-full">
                  {item.category}
                </span>
                <span class="text-gray-500 text-xs">{item.readTime}</span>
              </div>
              <h3 class="text-xl font-bold text-white mb-3 group-hover:text-[#39FF14] transition-colors duration-300">
                {item.title}
              </h3>
              <p class="text-gray-400 mb-4">
                {item.excerpt}
              </p>
              <div class="flex items-center justify-between">
                <span class="text-gray-500 text-sm flex items-center">
                  <i class="fas fa-calendar mr-2"></i> {item.date}
                </span>
                <button class="text-[#39FF14] hover:text-[#4B0082] transition-colors duration-300 text-sm font-bold flex items-center">
                  Read more
                  <i class="fas fa-arrow-right ml-2 text-xs"></i>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Tachyon Grid Stats -->
  <section class="py-16 bg-gradient-to-b from-gray-900 to-black">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-r from-gray-800 to-gray-900 rounded-2xl p-8 border border-[#4B0082]">
          <h2 class="text-3xl font-bold text-white mb-8 text-center">
            Tactical Analysis Metrics
          </h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="text-center">
              <div class="text-4xl font-bold text-[#39FF14] mb-2">89%</div>
              <div class="text-gray-400">Predictive Accuracy</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-[#39FF14] mb-2">24/7</div>
              <div class="text-gray-400">Analysis Coverage</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-[#39FF14] mb-2">150+</div>
              <div class="text-gray-400">Research Papers</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-[#39FF14] mb-2">42%</div>
              <div class="text-gray-400">Tactical Improvement</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-16 bg-gradient-to-r from-[#4B0082] to-[#2c0a4d]">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Join the Tactical Revolution
        </h2>
        <p class="text-gray-200 mb-8">
          Subscribe to our newsletter and receive the latest tactical insights directly to your inbox
        </p>
        <div class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="flex-1 px-6 py-4 rounded-lg bg-black text-white border border-[#39FF14] focus:outline-none focus:ring-2 focus:ring-[#39FF14]"
          />
          <button class="px-8 py-4 bg-[#39FF14] text-black font-bold rounded-lg hover:bg-[#2aa80e] transition-colors duration-300">
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes grid-pulse {
    0% { opacity: 0.1; }
    50% { opacity: 0.2; }
    100% { opacity: 0.1; }
  }
  
  .grid-pulse {
    animation: grid-pulse 3s infinite;
  }
  
  .neon-glow {
    box-shadow: 0 0 10px #39FF14, 0 0 20px #39FF14;
  }
  
  .card-hover {
    transition: all 0.3s ease;
  }
  
  .card-hover:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(57, 255, 20, 0.1);
  }
</style>