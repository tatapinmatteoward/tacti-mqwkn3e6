---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Tactics";
const pageDescription = "Dive into advanced football tactics with Tactical Tachyon. Explore formations, strategies, and analytical insights through a sci-fi lens of tactical grids and neon precision.";
const formations = [
  {
    name: "4-3-3 Offensive Surge",
    description: "High pressing with wing overloads—ideal for fluid attacks that slice through defenses like a laser beam.",
    color: "from-emerald-500 to-emerald-700"
  },
  {
    name: "3-5-2 Defensive Fortress",
    description: "Compact midfield diamond, enabling counter-thrusts via wing-backs. Perfect for absorbing pressure and igniting transitions.",
    color: "from-purple-500 to-purple-700"
  },
  {
    name: "4-4-2 Diamond Lock",
    description: "Balanced symmetry for mid-game adaptability, emphasizing central control and set-piece dominance.",
    color: "from-cyan-500 to-cyan-700"
  }
];
const strategies = [
  {
    title: "Quantum Pressing",
    description: "Synchronized high-intensity pressure that disrupts opponent rhythm through precise timing."
  },
  {
    title: "Neural Transition",
    description: "Rapid shift from defensive to offensive positions using predictive analytics."
  },
  {
    title: "Tachyon Flow",
    description: "Dynamic movement patterns that create space through calculated misdirection."
  }
];
const gridPattern = `
  <svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
        <path d="M 20 0 L 0 0 0 20" fill="none" stroke="#39FF14" stroke-width="0.5" opacity="0.2"/>
      </pattern>
    </defs>
    <rect width="100" height="100" fill="url(#grid)" />
  </svg>
`;
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="relative min-h-screen bg-black text-white overflow-hidden">
    <!-- Tactical Grid Background -->
    <div class="absolute inset-0 z-0 opacity-20" style="background-image: url('data:image/svg+xml;base64,');"></div>
    
    <!-- Animated Grid Overlay -->
    <div class="absolute inset-0 z-10">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-emerald-500/10 via-transparent to-transparent"></div>
    </div>
    
    <!-- Hero Section -->
    <section class="relative z-20 pt-24 pb-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6">
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-emerald-400 to-cyan-400">
              Tactics
            </span>
          </h1>
          <p class="text-xl md:text-2xl text-emerald-200 max-w-3xl mx-auto mb-10">
            Decoding the Grid
          </p>
          <div class="max-w-3xl mx-auto bg-gradient-to-r from-emerald-900/30 to-purple-900/30 p-1 rounded-lg backdrop-blur-sm border border-emerald-500/30">
            <p class="text-lg md:text-xl text-gray-200 bg-gray-900/60 p-6 rounded-md">
              In the neon-lit arena of modern football, tactics aren't just plays—they're <span class="text-emerald-400 font-bold">quantum strategies</span> etched into a tactical grid.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Formations Section -->
    <section class="relative z-20 py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Core Formations: Building Your <span class="text-emerald-400">Matrix</span>
          </h2>
          <p class="text-emerald-200 max-w-2xl mx-auto">
            Master the foundational blueprints that define tactical excellence
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {formations.map((formation, index) => (
            <div 
              class={`relative group overflow-hidden rounded-xl border border-emerald-500/30 bg-gradient-to-br ${formation.color} p-6 transform transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:shadow-emerald-500/20`}
            >
              <div class="absolute top-0 right-0 w-32 h-32 bg-white opacity-5 rounded-full -translate-y-16 translate-x-16"></div>
              <div class="absolute bottom-0 left-0 w-40 h-40 bg-emerald-500 opacity-10 rounded-full translate-y-16 -translate-x-16"></div>
              
              <div class="relative z-10">
                <div class="text-5xl mb-4 text-white/80">#{index + 1}</div>
                <h3 class="text-2xl font-bold mb-3 text-white">{formation.name}</h3>
                <p class="text-emerald-100 mb-4">{formation.description}</p>
                <div class="flex items-center text-white/70">
                  <span class="mr-2">Advanced Tactical Grid</span>
                  <i class="fas fa-arrow-right"></i>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Advanced Strategies Section -->
    <section class="relative z-20 py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Advanced Strategies: Beyond the <span class="text-purple-400">Grid</span>
          </h2>
          <p class="text-purple-200 max-w-2xl mx-auto">
            Quantified movements that redefine the battlefield
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          {strategies.map((strategy, index) => (
            <div 
              class="group relative bg-gray-900/50 border border-purple-500/30 rounded-xl p-6 hover:border-purple-400/50 transition-all duration-300 backdrop-blur-sm hover:bg-gray-900/70"
            >
              <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-purple-500 to-emerald-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
              
              <div class="relative z-10">
                <div class="flex items-center mb-4">
                  <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-cyan-600 flex items-center justify-center mr-4">
                    <i class="fas fa-brain text-white text-xl"></i>
                  </div>
                  <h3 class="text-xl font-bold text-white">{strategy.title}</h3>
                </div>
                <p class="text-gray-300">{strategy.description}</p>
                
                <div class="mt-6 flex justify-between items-center">
                  <div class="flex space-x-2">
                    <div class="w-3 h-3 rounded-full bg-emerald-400 animate-pulse"></div>
                    <div class="w-3 h-3 rounded-full bg-purple-400 animate-pulse delay-75"></div>
                    <div class="w-3 h-3 rounded-full bg-cyan-400 animate-pulse delay-150"></div>
                  </div>
                  <div class="text-sm text-purple-300">Quantum Analysis</div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Tactical Insights Section -->
    <section class="relative z-20 py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="bg-gradient-to-r from-gray-900/70 to-gray-900/30 border border-emerald-500/30 rounded-2xl p-8 md:p-12 backdrop-blur-sm">
          <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/2 mb-8 md:mb-0 md:pr-8">
              <h2 class="text-3xl md:text-4xl font-bold mb-4">
                <span class="text-emerald-400">Tactical</span> Insights
              </h2>
              <p class="text-emerald-200 mb-6">
                At <span class="font-bold">Tactical Tachyon</span>, we unleash insights that transform coaches, analysts, and fans into tactical overlords.
              </p>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <i class="fas fa-check-circle text-emerald-400 mt-1 mr-3"></i>
                  <span>Quantum strategy analysis</span>
                </li>
                <li class="flex items-start">
                  <i class="fas fa-check-circle text-emerald-400 mt-1 mr-3"></i>
                  <span>Neural pattern recognition</span>
                </li>
                <li class="flex items-start">
                  <i class="fas fa-check-circle text-emerald-400 mt-1 mr-3"></i>
                  <span>Advanced data visualization</span>
                </li>
              </ul>
            </div>
            <div class="md:w-1/2">
              <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/20 to-purple-500/20 rounded-xl blur-xl"></div>
                <div class="relative bg-gray-900 border border-emerald-500/30 rounded-xl p-6">
                  <div class="flex justify-between items-center mb-4">
                    <h3 class="text-lg font-bold text-white">Tactical Dashboard</h3>
                    <div class="flex space-x-2">
                      <div class="w-3 h-3 rounded-full bg-emerald-400 animate-pulse"></div>
                      <div class="w-3 h-3 rounded-full bg-purple-400 animate-pulse delay-75"></div>
                    </div>
                  </div>
                  
                  <div class="space-y-4">
                    <div class="flex justify-between items-center p-3 bg-gray-800/50 rounded-lg">
                      <span class="text-gray-300">Formation Matchup</span>
                      <span class="text-emerald-400 font-bold">78%</span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-gray-800/50 rounded-lg">
                      <span class="text-gray-300">Pressing Efficiency</span>
                      <span class="text-emerald-400 font-bold">92%</span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-gray-800/50 rounded-lg">
                      <span class="text-gray-300">Transition Speed</span>
                      <span class="text-purple-400 font-bold">87%</span>
                    </div>
                  </div>
                  
                  <div class="mt-6 pt-4 border-t border-gray-700">
                    <div class="flex justify-between text-sm text-gray-400">
                      <span>Real-time Analysis</span>
                      <span class="text-emerald-400">Active</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer CTA Section -->
    <section class="relative z-20 py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-gradient-to-r from-emerald-900/40 to-purple-900/40 p-1 rounded-xl backdrop-blur-sm border border-emerald-500/30 inline-block">
          <div class="bg-gray-900/80 rounded-xl p-8">
            <h2 class="text-2xl md:text-3xl font-bold mb-4">
              Unleash Your Tactical <span class="text-emerald-400">Potential</span>
            </h2>
            <p class="text-emerald-200 max-w-2xl mx-auto mb-6">
              Join our community of tactical analysts and discover the next level of football intelligence
            </p>
            <button class="px-8 py-3 bg-gradient-to-r from-emerald-600 to-cyan-600 rounded-lg font-bold hover:from-emerald-500 hover:to-cyan-500 transition-all duration-300 transform hover:scale-105 shadow-lg shadow-emerald-500/20">
              Begin Your Tactical Journey
            </button>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  .delay-75 {
    animation-delay: 0.075s;
  }
  
  .delay-150 {
    animation-delay: 0.15s;
  }
</style>