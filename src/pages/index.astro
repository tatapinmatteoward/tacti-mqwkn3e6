---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Tactical Tachyon - Unleashing Tactical Insights in Football";
const pageDescription = "Dive into the future of football analysis with Tactical Tachyon. Explore tactical breakdowns, player insights, and predictive analytics in a sleek, sci-fi inspired interface.";

const features = [
  {
    title: "Deep Tactical Breakdowns",
    description: "Visualize formations and strategies like never before, with interactive grids that glow with neon precision.",
    icon: "fas fa-tachometer-alt"
  },
  {
    title: "Player Performance Analytics",
    description: "Uncover hidden patterns in player movements and contributions, from midfield maestros to defensive anchors.",
    icon: "fas fa-user-friends"
  },
  {
    title: "Predictive Simulations",
    description: "Harness sci-fi inspired models to forecast match outcomes and tactical shifts.",
    icon: "fas fa-brain"
  },
  {
    title: "Community Insights",
    description: "Join a network of analysts and fans sharing tactical knowledge and predictions.",
    icon: "fas fa-users"
  }
];

const testimonials = [
  {
    quote: "Tactical Tachyon revolutionized how I understand football strategy.",
    author: "Alex Morgan, Sports Analyst"
  },
  {
    quote: "The predictive models are incredibly accurate for match planning.",
    author: "Sarah Chen, Coach"
  },
  {
    quote: "A must-have tool for any serious football enthusiast.",
    author: "James Wilson, Tactical Director"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gray-900 text-white">
    <!-- Hero Section -->
    <section class="relative py-20 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-gray-900 to-primary/10 z-0"></div>
      <div class="absolute inset-0 z-0">
        <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-accent/20 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-1/3 right-1/4 w-72 h-72 bg-primary/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-primary to-accent">
            Tactical Tachyon
          </h1>
          <p class="text-xl md:text-2xl mb-10 text-gray-300">
            Unleashing Tactical Insights in Football
          </p>
          <p class="text-lg max-w-2xl mx-auto mb-12 text-gray-400">
            Dive into the future of football analysis with Tactical Tachyon. Explore tactical breakdowns, 
            player insights, and predictive analytics in a sleek, sci-fi inspired interface.
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <button class="px-8 py-4 bg-primary hover:bg-primary/90 text-gray-900 font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-primary/30">
              Explore Analysis
            </button>
            <button class="px-8 py-4 bg-transparent border-2 border-accent hover:bg-accent/10 text-accent font-bold rounded-lg transition-all duration-300">
              Join Community
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-gray-800/30">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Why Choose Tactical Tachyon?</h2>
          <div class="w-24 h-1 bg-primary mx-auto"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {features.map((feature, index) => (
            <div 
              class="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-xl p-6 hover:border-primary transition-all duration-300 transform hover:-translate-y-2 hover:shadow-xl hover:shadow-primary/20"
              style={{ animationDelay: `${index * 100}ms` }}
            >
              <div class="text-primary text-4xl mb-4">
                <i class={feature.icon}></i>
              </div>
              <h3 class="text-xl font-bold mb-3">{feature.title}</h3>
              <p class="text-gray-400">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Interactive Grid Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="flex flex-col lg:flex-row items-center gap-12">
          <div class="lg:w-1/2">
            <h2 class="text-3xl md:text-4xl font-bold mb-6">Interactive Tactical Grid</h2>
            <p class="text-gray-400 mb-6">
              Visualize formations and strategies like never before with our state-of-the-art tactical grid. 
              Every player position glows with precision, showing movement patterns and strategic alignments.
            </p>
            <div class="space-y-4">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-primary rounded-full mr-3"></div>
                <span>Dynamic player tracking with real-time analytics</span>
              </div>
              <div class="flex items-center">
                <div class="w-3 h-3 bg-primary rounded-full mr-3"></div>
                <span>Formation swapping with instant tactical evaluation</span>
              </div>
              <div class="flex items-center">
                <div class="w-3 h-3 bg-primary rounded-full mr-3"></div>
                <span>3D visualization for deep tactical insights</span>
              </div>
            </div>
          </div>
          <div class="lg:w-1/2 relative">
            <div class="relative aspect-square max-w-lg mx-auto">
              <!-- Grid background -->
              <div class="absolute inset-0 bg-gray-800/50 rounded-xl border border-gray-700"></div>
              
              <!-- Grid lines -->
              <div class="absolute inset-0 grid grid-cols-5 grid-rows-5">
                {Array.from({ length: 25 }).map((_, i) => (
                  <div class="border border-gray-700/50"></div>
                ))}
              </div>
              
              <!-- Player positions -->
              <div class="absolute top-1/4 left-1/4 w-6 h-6 bg-primary rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
              <div class="absolute top-1/4 left-1/2 w-6 h-6 bg-primary rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
              <div class="absolute top-1/4 right-1/4 w-6 h-6 bg-primary rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
              
              <div class="absolute top-1/2 left-1/4 w-6 h-6 bg-accent rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
              <div class="absolute top-1/2 left-1/2 w-6 h-6 bg-accent rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
              <div class="absolute top-1/2 right-1/4 w-6 h-6 bg-accent rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
              
              <div class="absolute bottom-1/4 left-1/4 w-6 h-6 bg-primary rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
              <div class="absolute bottom-1/4 left-1/2 w-6 h-6 bg-primary rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
              <div class="absolute bottom-1/4 right-1/4 w-6 h-6 bg-primary rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
              
              <!-- Neon glow effect -->
              <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-primary/20 to-accent/20 blur-xl -z-10"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 bg-gray-800/30">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">What Our Users Say</h2>
          <div class="w-24 h-1 bg-primary mx-auto"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {testimonials.map((testimonial, index) => (
            <div 
              class="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-xl p-6 hover:border-primary transition-all duration-300"
              style={{ animationDelay: `${index * 200}ms` }}
            >
              <div class="text-primary text-3xl mb-4">"</div>
              <p class="text-gray-300 mb-6">{testimonial.quote}</p>
              <p class="text-accent font-bold">- {testimonial.author}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="bg-gradient-to-r from-primary/10 to-accent/10 border border-gray-700 rounded-2xl p-12 text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Transform Your Football Analysis?</h2>
          <p class="text-gray-400 max-w-2xl mx-auto mb-10">
            Join thousands of analysts, coaches, and fans who are already leveraging tactical insights 
            powered by cutting-edge technology.
          </p>
          <button class="px-10 py-4 bg-primary hover:bg-primary/90 text-gray-900 font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-primary/30">
            Get Started Today
          </button>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  @keyframes pulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }
  
  .animate-pulse {
    animation: pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  .delay-1000 {
    animation-delay: 1s;
  }
</style>